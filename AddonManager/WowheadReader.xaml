<Window x:Class="AddonManager.WowheadReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonManager"
        mc:Ignorable="d"
        Title="WowheadReader" Height="768" Width="1024">
    <Grid>
        <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Import_Click"/>
        <Button x:Name="btnImportAll" Content="ImportAll" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top" Click="ImportAll_Click"/>
        <ScrollViewer Margin="0,35,0,0" BorderBrush="Gray" BorderThickness="1">
            <TextBox x:Name="ConsoleOut" TextWrapping="Wrap" />
        </ScrollViewer>
        <ComboBox x:Name="cmbSpec" HorizontalAlignment="Left" Margin="150,9,0,0" VerticalAlignment="Top" Width="150" SelectedIndex="0" />
        <ComboBox x:Name="cmbPhase" HorizontalAlignment="Left" Margin="314,9,0,0" VerticalAlignment="Top" Width="125" SelectedIndex="0" />
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="450,10,0,10" VerticalAlignment="Top" Click="Cancel_Click"/>

        <Button x:Name="btnLocalize" Content="Localize" Margin="10,10,90,10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Localize_Click"/>
        <Button x:Name="btnRefreshItems" Content="RefreshItems" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Refresh_Click"/>

        <Button x:Name="btnConverters" Content="Converters" Margin="10,10,145,10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Converters_Click"/>
        <Button x:Name="btnVerify" Content="Verify" Margin="10,10,215,10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Verify_Click"/>
        <Button x:Name="btnTemp" Content="Temp" Margin="10,10,260,10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Temp_Click" IsEnabled="False"/>
    </Grid>
</Window>
